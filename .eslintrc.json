{
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:jsx-a11y/recommended",
    "plugin:storybook/recommended"
  ],
  "plugins": [
    "unused-imports",
    "jsx-a11y"
  ],
  "rules": {
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "no-console": "error",
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          "../*"
        ]
      }
    ]
  }
}